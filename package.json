{
  "name": "nexusflow",
  "version": "2.0.0",
  "description": "Complete Task Management and Team Collaboration Platform - Streamline Teams, Amplify Productivity",
  "main": "server.js",
  "scripts": {
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "server": "cd backend && npm run dev",
    "client": "cd frontend && npm start",
    "build": "cd frontend && npm run build",
    "build:backend": "cd backend && npm run build",
    "build:frontend": "cd frontend && npm run build",
    "install-all": "npm install && cd backend && npm install && cd ../frontend && npm install",
    "start": "concurrently \"cd backend && npm start\" \"cd frontend && npm run build && serve -s frontend/build\"",
    "test": "cd backend && npm test && cd ../frontend && npm test",
    "test:backend": "cd backend && npm test",
    "test:frontend": "cd frontend && npm test",
    "setup": "npm run install-all && npm run setup:db",
    "setup:db": "cd backend && node create-demo-org.js",
    "seed": "cd backend && node seed-admin.js",
    "clean": "rimraf node_modules backend/node_modules frontend/node_modules",
    "clean:build": "rimraf frontend/build backend/dist",
    "health": "curl http://localhost:5000/api/health || echo 'Server not running'",
    "logs": "cd backend && npm run logs"
  },
  "keywords": [
    "task-management",
    "team-collaboration",
    "project-management",
    "productivity",
    "workflow",
    "kanban",
    "dashboard",
    "analytics",
    "react",
    "nodejs",
    "mysql",
    "enterprise",
    "rbac",
    "real-time",
    "notifications"
  ],
  "author": "NexusFlow Team <team@nexusflow.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/nexusflow/nexusflow.git"
  },
  "bugs": {
    "url": "https://github.com/nexusflow/nexusflow/issues"
  },
  "homepage": "https://nexusflow.com",
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "rimraf": "^5.0.5"
  },
  "dependencies": {
    "axios": "^1.12.2"
  }
}
